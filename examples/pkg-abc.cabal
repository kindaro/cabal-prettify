cabal-version: 3.0
name:          pkg-abc
version:       0.1.0.0

library pkg-def
  default-language: Haskell2010
  hs-source-dirs:   pkg-def
  build-depends:    base
  exposed-modules:  PkgDef

executable program
  default-language: Haskell2010
  hs-source-dirs:   exe
  main-is:          Main.hs

  -- we want that to resolve to pkg-def main library.
  build-depends:
    , base
    , pkg-def:pkg-def
